<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_view"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivBackgroundAvatar"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="imBackgroundAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_avatar" />

    <ImageView
        android:id="@+id/ivBackgroundScore"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_avatar" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <ImageView
        android:id="@+id/imAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="imAvatar"
        app:layout_constraintEnd_toEndOf="@+id/ivBackgroundAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivBackgroundAvatar"
        app:srcCompat="@drawable/avatar_layla" />

    <ImageView
        android:id="@+id/imLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:baselineAlignBottom="false"
        android:contentDescription="imLogo"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBackgroundAvatar"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bt_play"
        app:layout_constraintEnd_toStartOf="@+id/btDesign"
        app:layout_constraintStart_toEndOf="@+id/btShop"
        app:layout_constraintTop_toBottomOf="@+id/imLogo" />

    <Button
        android:id="@+id/btShop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bt_buy"
        app:layout_constraintEnd_toStartOf="@+id/btPlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/btDesign"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/bt_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/tvShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SHOP"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btShop"
        app:layout_constraintStart_toStartOf="@+id/btShop"
        app:layout_constraintTop_toBottomOf="@+id/btShop" />

    <TextView
        android:id="@+id/tvPlay"
        android:layout_height="16dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        android:text="PLAY"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btPlay"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DESIGN"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btDesign"
        app:layout_constraintStart_toStartOf="@+id/btDesign"
        app:layout_constraintTop_toBottomOf="@+id/btDesign" />

    <Button
        android:id="@+id/btPref"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_prefs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btPlus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bt_money"
        app:layout_constraintBottom_toBottomOf="@+id/ivBackgroundScore"
        app:layout_constraintStart_toStartOf="@+id/ivBackgroundScore"
        app:layout_constraintTop_toTopOf="@+id/ivBackgroundScore" />

    <ImageView
        android:id="@+id/ivGema"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivBackgroundScore"
        app:layout_constraintEnd_toEndOf="@+id/ivBackgroundScore"
        app:srcCompat="@drawable/gema" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@+id/ivBackgroundScore"
        app:layout_constraintTop_toTopOf="@+id/ivBackgroundScore"
        app:srcCompat="@drawable/lingote" />

    <TextView
        android:id="@+id/tvScoreLingote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="100000"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/ivBackgroundScore" />

    <TextView
        android:id="@+id/tvScoreGema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="1000000"
        android:textColor="#FFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivBackgroundScore"
        app:layout_constraintEnd_toStartOf="@+id/ivGema" />
</android.support.constraint.ConstraintLayout>